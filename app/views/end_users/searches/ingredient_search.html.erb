<div class="container">
  <% if @ingredients.any? %>
    <div class="row">
      <div class="col-xs-12">
        <div class="page-title">
          <h2>INGREDIENT RELATED TO "<%= @word %>"</h2>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-9">
        <div class="ingredients-table">
          <%= render partial: "end_users/ingredients/ingredients_table", locals: {ingredients: @ingredients } %>
        </div>
      </div>
      <div class="col-xs-3">
        <div class="add-ingredient-btn">
          <%= link_to new_end_users_ingredient_path do %>
            <btn class="btn btn-primary">新しく材料を追加する</btn>
          <% end %>
        </div>
        <div class="ingredient-index-btn">
          <%= link_to end_users_ingredients_path do %>
            <btn class="btn btn-success">材料一覧に戻る</btn>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
  <div class="row">
    <div class="col-xs-12">
      <div class="page-title">
        <h2>NO INGREDIENT FOUND RELATED TO "<%= @word %>"</h2>
      </div>
      <div class="add-ingredient-btn">
        <%= link_to new_end_users_ingredient_path do %>
          <btn class="btn btn-primary">新しく材料を追加する</btn>
        <% end %>
      </div>
      <div class="ingredient-index-btn">
        <%= link_to end_users_ingredients_path do %>
          <btn class="btn btn-success">材料一覧に戻る</btn>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>