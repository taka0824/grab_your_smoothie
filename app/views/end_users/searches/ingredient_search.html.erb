<div class="container">
  <div class="row">
    <h2><%= @word %>と関連する材料</h2>
  </div>
  <div class="row">
    <div class="col-xs-9">
      <% @ingredients.each do |ingredient| %>
        <%= attachment_image_tag ingredient, :image, :fill, 150, 150, format:'jpeg',fallback:"no_image.jpg",size:"150x150"%>
        <%= ingredient.name %>
      <% end %>
    </div>
  </div>
</div>
