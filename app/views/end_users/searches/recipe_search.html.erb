<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="page-title">
        <% if @smoothies.empty? %>
          <h2><span>「<%= @word %>」に関連したスムージーレシピはありません</span></h2>
        <% else %>
          <h2><span>「<%= @word %>」に関連したスムージーレシピ一覧</span></h2>
        <% end %>
      </div>
    </div>
  </div>
  <% if @smoothies.any? %>
    <div class="row">
      <div class="col-xs-12">
        <div class="smoothies">
          <%= render partial: "end_users/smoothies/smoothies_boxes", locals: { smoothies: @smoothies } %>
        </div>
      </div>
    </div>
  <% end %>
</div>