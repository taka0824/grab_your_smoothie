<% if smoothie.favorited_by?(current_end_user) %>
  <%= link_to smoothy_favorites_path(smoothie), remote: true, method: :delete do %>
    <i class="fas fa-heart", style="color: red;"></i>
  <% end %>
  <%= smoothie.favorites.count %>
<% else %>
  <%= link_to smoothy_favorites_path(smoothie), remote: true, method: :post do %>
    <i class="fas fa-heart"></i>
  <% end %>
  <%= smoothie.favorites.count %>
<% end %>