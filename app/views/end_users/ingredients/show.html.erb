<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= @ingredient.name %><br>
      <%= attachment_image_tag @ingredient, :image, :fill, 200, 200, format:'jpeg',fallback:"no_image.jpg",size:"200x200"%><br>
    </div>
    <div class="col-xs-4">
      <h3>１(個/杯）あたりの可食部<%= @ingredient.edible_part_amount %>に含まれる栄養素</h3>
      <table class="table">
        <thead>
          <tr>
            <th>栄養素</th>
            <th>量</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>エネルギー</td>
            <td><%= @ingredient.energy %>kcal</td>
          </tr>
          <tr>
            <td>タンパク質</td>
            <td><%= @ingredient.protein %>g</td>
          </tr>
          <tr>
            <td>糖質</td>
            <td><%= @ingredient.carb %>g</td>
          </tr>
          <tr>
            <td>脂質</td>
            <td><%= @ingredient.lipid %>g</td>
          </tr>
          <tr>
            <td>ビタミンA</td>
            <td><%= @ingredient.convert_to_micro(@ingredient.vitamin_a) %>μg</td>
          </tr>
          <tr>
            <td>ビタミンB1</td>
            <td><%= @ingredient.convert_to_mili(@ingredient.vitamin_b1) %>mg</td>
          </tr>
          <tr>
            <td>ビタミンB2</td>
            <td><%= @ingredient.convert_to_mili(@ingredient.vitamin_b2) %>mg</td>
          </tr>
          <tr>
            <td>ビタミンB6</td>
            <td><%= @ingredient.convert_to_mili(@ingredient.vitamin_b6) %>mg</td>
          </tr>
          <tr>
            <td>ビタミンB12</td>
            <td><%= @ingredient.convert_to_micro(@ingredient.vitamin_b12) %>μg</td>
          </tr>
          <tr>
            <td>ビタミンC</td>
            <td><%= @ingredient.convert_to_mili(@ingredient.vitamin_c) %>mg</td>
          </tr>
          <tr>
            <td>ビタミンD</td>
            <td><%= @ingredient.convert_to_micro(@ingredient.vitamin_d) %>μg</td>
          </tr>
          <tr>
            <td>ビタミンE</td>
            <td><%= @ingredient.convert_to_mili(@ingredient.vitamin_e) %>mg</td>
          </tr>
          <tr>
            <td>ビタミンK</td>
            <td><%= @ingredient.convert_to_micro(@ingredient.vitamin_k) %>μg</td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-xs-4">
      <%= form_with model: @juicer_ingredient, url: end_users_juicer_ingredients_path, local: true do |f| %>
        <%= f.hidden_field :ingredient_id, :value => @ingredient.id %>
        <%= f.text_field :amount %>グラム
        <%= f.submit "ジューサーに追加" %>
      <% end %>
    </div>
  </div>
</div>