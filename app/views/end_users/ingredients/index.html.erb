<div class="container">
  <div class="row">
    <h2>レシピを作る</h2>
  </div>
  <div class="row">
    <div class="col-xs-9">
      <% @ingredients.each do |ingredient| %>
        <%= link_to end_users_ingredient_path(ingredient) do %>
          <%= attachment_image_tag ingredient, :image, :fill, 150, 150, format:'jpeg',fallback:"no_image.jpg",size:"150x150"%>
          <%= ingredient.name %>
        <% end %>
      <% end %>
    </div>
    <div class="col-xs-3">
      <h3>材料名を検索</h3>
      <%= form_with url: end_users_searches_ingredient_search_path, method: :get, local: true do |f| %>
        <%= f.text_field :word %>
        <%= f.submit "検索" %>
      <% end %>
    </div>
  </div>
</div>