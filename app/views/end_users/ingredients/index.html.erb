<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <div class="page-title">
        <h2><span>材料選択</span></h2>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
      <div class="end-user-ingredient-index-actions">
        <div class="end-user-ingredient-index-action">
          <%= form_with url: searches_ingredient_search_path, class: "form-inline", method: :get, local: true do |f| %>
            <%= f.text_field :word, class: "form-control", placeholder: "材料名で検索" %>
            <%= f.submit "検索", class: "btn btn-default" %>
          <% end %>
        </div>
        <div class="end-user-ingredient-index-action">
          <%= link_to new_ingredient_path do %>
            <btn class="btn btn-primary">新しく材料を作成する</btn>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="ingredients-table">
        <%= render partial: "end_users/ingredients/ingredients_table", locals: { ingredients: @ingredients} %>
      </div>
    </div>
  </div>
</div>