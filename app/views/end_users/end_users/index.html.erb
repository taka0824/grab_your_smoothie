<div class="container">
  <div class="row">
    <div class='col-xs-12'>
      <div class="page-title">
        <h2>ユーザー一覧</h2>
      </div>
    </div>
  </div>
  <div class="row">
    <table class='end_users-table'>
      <thead>
        <tr>
          <th>ユーザー名</th>
          <th>スムージー投稿</th>
          <th>いいねした投稿</th>
        </tr>
      </thead>
      <tbody>
        <% @end_users.each do |end_user| %>
          <tr>
            <td>
              <%= link_to end_users_end_user_path(end_user) do %>
                <%= attachment_image_tag end_user.smoothies.find_by(is_recommended: true), :image, :fill, 50, 50, format:'jpeg', fallback: "no_image.jpg", size: "50x50" %><br>
                <%= end_user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to end_user.smoothies.count, recipe_list_end_users_end_user_path(end_user) %>レシピ
            </td>
            <td>
              <%= link_to end_user.favorites.count, favorite_list_end_users_end_user_path(end_user) %>レシピ
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>