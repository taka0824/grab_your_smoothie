<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render partial: "end_users/end_users/mypage_sidebar", locals: { end_user: @end_user } %>
    </div>
    <% if @smoothies.empty? %>
      <%= @end_user.name %>さんの投稿はありません
    <% else %>
      <div class="col-xs-9">
        <div class="page-title">
          <h2><%= @end_user.name %>さんの投稿レシピ一覧</h2>
        </div>
        <div class="smoothies">
          <%= render partial: "end_users/smoothies/smoothies_boxes", locals: { smoothies: @smoothies } %>
        </div>
      </div>
    <% end %>
  </div>
</div>