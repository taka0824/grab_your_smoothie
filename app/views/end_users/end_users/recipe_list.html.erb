<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3">
      <%= render partial: "end_users/end_users/mypage_sidebar", locals: { end_user: @end_user } %>
    </div>
    <% if @smoothies.empty? %>
      <div class="page-title">
        <h2><span><%= @end_user.name %>さんのレシピ投稿はありません</span></h2>
      </div>
    <% else %>
      <div class="col-sm-9">
        <div class="page-title">
          <h2><span><%= @end_user.name %>さんの投稿レシピ</span></h2>
        </div>
        <div class="smoothies">
          <%= render partial: "end_users/smoothies/smoothies_boxes", locals: { smoothies: @smoothies } %>
        </div>
      </div>
    <% end %>
  </div>
</div>