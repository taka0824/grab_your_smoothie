<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render partial: "end_users/end_users/mypage_sidebar", locals: { end_user: @end_user } %>
    </div>
    <% if @favorited_smoothies.empty? %>
      <%= @end_user.name %>さんのいいねはありません
    <% else %>
      <div class="col-xs-9">
        <h2><%= @end_user.name %>さんのいいね一覧</h2>
        <div class="favorite_smoothies">
          <% @favorited_smoothies.each do |smoothie| %>
            <div class="favorite_smoothie">
              <div class="favorite_smoothie_image">
                <%= link_to end_users_smoothy_path(smoothie) do %>
                  <%= attachment_image_tag smoothie, :image, :fill, 150, 150, format:'jpeg', fallback: "no_image.jpg", size: "150x150" %>
                <% end %>
              </div>
              <div class="favorite_button">
                <%= render partial: "end_users/smoothies/favorite_button", locals: { smoothie: smoothie } %>
              </div>
              <div class="comment_button">
                <%= link_to new_end_users_smoothy_comment_path(smoothie) do %>
                  <i class="fas fa-pen"></i>コメント<%= smoothie.comments.count %>件
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>