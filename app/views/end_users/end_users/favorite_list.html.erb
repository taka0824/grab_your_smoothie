<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render partial: "end_users/end_users/mypage_sidebar", locals: { end_user: @end_user } %>
    </div>
    <% if @favorited_smoothies.empty? %>
      <%= @end_user.name %>さんのいいねはありません
    <% else %>
      <div class="col-xs-9">
        <h2><%= @end_user.name %>さんのいいねしたスムージー一覧</h2>
        <div class="smoothies">
          <%= render partial: "end_users/smoothies/smoothie_boxes", locals: { smoothies: @favorited_smoothies } %>
        </div>
      </div>
    <% end %>
  </div>
</div>