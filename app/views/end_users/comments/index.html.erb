<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="page-title">
        <h2>COMMENT</h2>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6">
      <%= attachment_image_tag @smoothie, :image, :fill, 400, 400, class: "image-size", format:'jpeg',fallback:"no_image.jpg",size:"400x400"%><br>
      <%= @smoothie.introduction %><br>
    </div>
    <div class="col-xs-6">
      <div class='comment_table'>
        <%= render partial: "end_users/comments/comment_table", locals: { comments: @comments, smoothie: @smoothie} %>
      </div>
      <div class="comment_form">
        <%= render partial: "end_users/comments/comment_form", locals: { smoothie: @smoothie, comment: @comment } %>
      </div>
    </div>
  </div>
</div>