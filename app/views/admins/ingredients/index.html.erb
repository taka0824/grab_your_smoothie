<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>材料一覧</h2>
    </div>
    <div class="row">
      <%= link_to new_admins_ingredient_path do %>
        <btn class="btn btn-success">新規材料追加</btn>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-10">
        <% @ingredients.each do |ingredient| %>
          <%= link_to admins_ingredient_path(ingredient) do %>
            <%= attachment_image_tag ingredient, :image, :fill, 150, 150, format:'jpeg',fallback:"no_image.jpg",size:"150x150"%><br>
            <%= ingredient.name %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

