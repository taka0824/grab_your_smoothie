<div class="container">
  <% if @ingredients.empty? %>
    <div class="row">
      <div class="col-xs-12">
        <div class="page-title">
          <h2>本日追加された材料はありません</h2>
        </div>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-xs-12">
        <div class="page-title">
          <h2><span>ALL INGREDIENTS</span></h2>
        </div>
      </div>
      <div class="row">
        <%= link_to new_admins_ingredient_path do %>
          <btn class="btn btn-success">新規材料追加</btn>
        <% end %>
      </div>
      <div class="row">
        <div class="admin-ingredient-table col-xs-offset-4 col-xs-4">
          <table class="table">
            <thead>
              <tr>
                <th>追加日</th>
                <th>材料名</th>
              </tr>
            </thead>
            <tbody>
              <% @ingredients.each do |ingredient| %>
                <tr>
                  <td><%= ingredient.created_at.strftime('%Y/%m/%d') %></td>
                  <td>
                    <%= link_to admins_ingredient_path(ingredient) do %>
                      <%= ingredient.name %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>