<div class="container">
  <% if @comments.empty? %>
    <div class="row">
      <div class="col-xs-12">
        <div class="page-title">
          <h2>本日作成されたコメントはありません</h2>
        </div>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-xs-12">
        <div class="page-title">
          <h2><span>COMMENTS POSTED TODAY</span></h2>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <div class="admin-comment-table">
          <%= render partial: "admins/comments/comment_table", locals: {comments: @comments} %>
        </div>
      </div>
    </div>
  <% end %>
</div>