<table class="table">
  <thead>
    <tr class="row">
      <th class="col-xs-3">作成日時</th>
      <th class="col-xs-3">投稿者</th>
      <th class="col-xs-5">内容</th>
      <th class="col-xs-1"></th>
    </tr>
  </thead>
  <tbody>
    <% comments.each do |comment| %>
      <tr class="row">
        <td class="col-xs-3"><%= comment.created_at.to_s(:datetime_jp) %></td>
        <td class="col-xs-3"><%= comment.end_user.name %></td>
        <td class="col-xs-5">
          <%= link_to admins_smoothy_path(comment.smoothie) do %>
            <%= comment.content %>
          <% end %>
        </td>
        <td class="col-xs-1">
          <%= link_to admins_comment_path(comment), method: :delete, data: {confirm: "削除しますか？"} do %>
            <button class="btn btn-danger">削除</button>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="row">
  <div class="paginate-container">
    <%= paginate comments %>
  </div>
</div>